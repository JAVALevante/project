<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd">
		
	<!-- Spring扫描注解 -->
	<context:component-scan base-package="com.etoak" use-default-filters="false">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>
	<mvc:annotation-driven/>
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/pages/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding" value="UTF-8"/>
	</bean>
	<mvc:resources location="/js/" mapping="/js/**"/>
		
		<!-- 因为我们只有发出请求后才会加载springmvc.xml，所以这个配置文件
			能跳转首页，说明发出了请求，这里的请求名就是 "/"，也就是说当我们
			直接跳页面时就发出了 / 的请求 相当于创建一个首页控制器
			然后 @RequestMapping({"/"})
   				 public String add(){
       				 return "add";
   				 }
   			path  对应的就就是请求的uri
   			view-name就是要返回的视图名
		 -->
 	<mvc:view-controller path="/" view-name="add"/>
		

</beans>